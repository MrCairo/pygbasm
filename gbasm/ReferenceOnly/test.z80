SECTION "game_vars", WRAM0
CLOUDS_X: DS 1
BUILDINGS_X: DS 1
FLOOR_X: DS 1
PARALLAX_DELAY_TIMER: DS 1
FADE_IN_ACTIVE:: DS 1
FADE_STEP: DS 1
ALLOW_PARALLAX:: DS 1
READ_INPUT:: DS 1
START_PLAY:: DS 1

SECTION "game", ROMX

PARALLAX_DELAY EQU $02
FADE_FACT EQU 2
FADE_FACE_OFFSET EQU $30

.update_game:
	ld HL, READ_INPUT
	ld A, [HL]
	cp $00
	jr nz, .update_game
	jr .continue_update_1
	ld A, [HL]
	cp $00
	XOR D
.continue_update_1:
	CP H
	CP L
	CP A
